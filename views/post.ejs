<%- include('partials/postHeader') %>

<div class='container d-flex justify-content-center align-items-center'>
    <div class='post d-flex flex-column mt-5 card p-5 pt-3' data-id='<%= post._id %>'>
        <div class='post-image'>
            <img class='rounded' src='<%= post.image %>' alt='Image for this post'>
        </div>
        <div class='post-body'>
            <div class='post-title'>
                <h3><%= post.title %></h3>
                <h6> by <%= post.user.userName %></h6>
            </div>
            <div class='post-caption'>
                <p><%= post.caption %></p>
            </div>
        </div>
        <div class='post-footer'>
            <button class='btn btn-primary like'>Like</button>
            <% if(user.id === post.user.id){ %>
                <button class='btn btn-danger del'>Delete</button>
            <% } %>
        </div>
    </div>
</div> 

<%- include('partials/footer') %>